@model SunsViewModel
<h2>Sukurti</h2>
<hr/>
<div class="row" >
	<div class="col-6">

		<div class="card">
			<div class="card-header">
				<h5>Pridėkite naują šunį</h5>
			</div>
			<div class="card-body">
				<form asp-controller="HelloWorld" asp-action="CreateDog" method="post">
			<div class="mb-3">
				<label class="form-label">Šuns vardas</label>
				<input asp-for=Name type="text" class="form-control" />
			</div>
			<div class="mb-3">
				<label class="form-label">Šuns amžius</label>
				<input asp-for=Age type="number" class="form-control" />
			</div>
			<div class="mb-3">
				<button type="submit" class="btn btn-primary">Išsaugoti</button>
			</div>
		</form>
			</div>
			<div class="card-footer">

			</div>
		</div>


		</div>
</div>